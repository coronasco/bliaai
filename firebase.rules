rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check admin role
    function isAdmin() {
      return request.auth != null && 
             (get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role == 'admin' || 
              get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.roles.hasAny(['admin']));
    }

    match /customers/{uid} {
      // Owner can read and write to their own document
      // Admins can read and write to any user document
      allow read: if request.auth.uid == uid || isAdmin();
      allow write: if request.auth.uid == uid || isAdmin();

      // Submap for checkout sessions, subscriptions and payments
      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid || isAdmin();
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid || isAdmin();
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid || isAdmin();
      }
    }
    
    // Rules for roadmaps collection - reguli simplificate complet
    match /roadmaps/{id} {
      // Oricine poate citi roadmap-urile
      allow read: if true;
      
      // Reguli pentru scriere - simplificăm să cerem doar autentificare pentru update/delete
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Simplificăm regula pentru update - permitem doar autentificarea
      allow update: if request.auth != null;
      
      // Simplificăm regula pentru delete - permitem doar autentificarea
      allow delete: if request.auth != null;
    }

    // Rules for paths collection - simplified too
    match /paths/{id} {
      // Anyone can read paths
      allow read: if true;
      
      // Only authenticated user can create a path with their userId
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Only owner can update or delete path
      allow update, delete: if request.auth != null && 
                           (resource.data.userId == request.auth.uid || isAdmin());
    }

    // Products and prices - can be read by anyone
    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }

      match /tax_rates/{id} {
        allow read: if true;
      }
    }
    
    // Rules for users collection - permitem citirea datelor utilizatorilor pentru afișarea numelui
    match /users/{uid} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == uid || isAdmin();
    }
    
    // Rules for roadmap_subtasks collection
    match /roadmap_subtasks/{id} {
      // Anyone authenticated can read subtasks
      allow read: if request.auth != null;
      
      // Admins can update subtasks
      allow update: if isAdmin();
                      
      // Only authenticated user can create a subtask
      allow create: if request.auth != null;
      
      // Admins can delete subtasks
      allow delete: if isAdmin();
    }
    
    // Rules for feedback collection
    match /feedback/{id} {
      // Anyone authenticated can read and create feedback
      allow read, create: if request.auth != null;

      // Administratorii pot actualiza și șterge feedback-urile
      allow update, delete: if request.auth != null && 
                             (get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.role == 'admin' || 
                              get(/databases/$(database)/documents/customers/$(request.auth.uid)).data.roles.hasAny(['admin']));
    }
    
    // Reguli pentru roadmap_clones - permitem utilizatorilor să înregistreze clonarea
    match /roadmap_clones/{cloneId} {
      // Orice utilizator autentificat poate citi sau crea înregistrări pentru clonare
      allow read, create: if request.auth != null;
    }
  }
}